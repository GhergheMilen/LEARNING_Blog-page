<%- include("./partials/head.ejs") %>
<h1>Blog Site</h1>
<h2>Creeaza o postare!</h2>

<form action="/submit" method="post">
  <input type="text" name="title" placeholder="Titlul postarii" required />
  <input type="text" name="description" placeholder="Descrierea" required />
  <input type="submit" name="submit" value="Posteaza!" />
</form>

<% if(posts.length > 0 ) {%>
  <% posts.forEach((post) => { %>
<div>
  <h1><%= post.title %></h1>
  <p><%= post.description %></p>

  <form action=/delete?id=<%= post.id %> method="post">
    <input type="submit" value="Delete" />
  </form>

  <form action="/put" method="post">
    <input type="hidden" name="id" value="<%= post.id %>" />
    <input type="text" name="title" placeholder="Titlul postarii" value=<%= post.title %> required />
    <input type="text" name="description" placeholder="Descrierea" value=<%= post.description %> required />
    <input type="submit" value="Update" />
  </form>
</div>
  <% }) %>
<% } %> 
